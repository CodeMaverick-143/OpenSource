# Environment (development, testing, production)
ENVIRONMENT=development

# Database - NeonDB (serverless PostgreSQL)
# Get these from: https://console.neon.tech
# See docs/NEONDB_SETUP.md for setup instructions

# Pooled connection for application (use this in production)
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/database?sslmode=require&pgbouncer=true"

# Direct connection for migrations (bypasses pooling)
DIRECT_DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/database?sslmode=require"

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# Application
APP_NAME=ContriVerse
APP_VERSION=0.1.0
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# API
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# GitHub OAuth (to be configured)
# Register OAuth App at: https://github.com/settings/developers
# Required scopes: read:user, user:email
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/github/callback

# GitHub Webhooks (for PR tracking)
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# GitHub App (optional, for enhanced API access)
# GITHUB_APP_ID=123456
# GITHUB_APP_PRIVATE_KEY=path/to/private-key.pem

# JWT
JWT_ALGORITHM=HS256

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
