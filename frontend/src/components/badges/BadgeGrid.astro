---
/**
 * Badge grid layout component.
 * Displays badges in a responsive grid with consistent spacing.
 */
import type { Badge } from "../../lib/types";
import BadgeCard from "./BadgeCard.astro";

interface Props {
    badges: Badge[];
    earned?: boolean[];
    emptyMessage?: string;
}

const { badges, earned, emptyMessage = "No badges to display" } = Astro.props;
---

{
    badges.length === 0 ? (
        <div class="text-center py-12">
            <div class="text-gray-400 text-lg">{emptyMessage}</div>
        </div>
    ) : (
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {badges.map((badge, index) => (
                <a
                    href={`/badges/${badge.id}`}
                    class="block transition-transform hover:scale-105"
                >
                    <BadgeCard
                        badge={badge}
                        earned={earned ? earned[index] : false}
                        showCategory={true}
                    />
                </a>
            ))}
        </div>
    )
}
