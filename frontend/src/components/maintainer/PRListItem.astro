---
/**
 * PR list item component for maintainer dashboard.
 */
import type { ProjectPR } from "../../lib/types";
import PRStatusBadge from "./PRStatusBadge.astro";

interface Props {
    pr: ProjectPR;
}

const { pr } = Astro.props;

// Format date
const formatDate = (dateStr: string) => {
    const date = new Date(dateStr);
    return date.toLocaleDateString("en-US", {
        month: "short",
        day: "numeric",
        year: "numeric",
    });
};

// Calculate time since opened
const getTimeSince = (dateStr: string) => {
    const date = new Date(dateStr);
    const now = new Date();
    const diffMs = now.getTime() - date.getTime();
    const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));

    if (diffDays === 0) return "Today";
    if (diffDays === 1) return "Yesterday";
    if (diffDays < 7) return `${diffDays} days ago`;
    if (diffDays < 30) return `${Math.floor(diffDays / 7)} weeks ago`;
    return `${Math.floor(diffDays / 30)} months ago`;
};
---

<div
    class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow"
>
    <div class="flex items-start justify-between gap-4">
        <!-- PR info -->
        <div class="flex-1 min-w-0">
            <!-- Title and number -->
            <div class="flex items-center gap-2 mb-2">
                <a
                    href={`/maintainer/${pr.repository.id}/pr/${pr.id}`}
                    class="text-lg font-semibold text-gray-900 hover:text-blue-600 truncate"
                >
                    {pr.title}
                </a>
                <span class="text-gray-500 text-sm flex-shrink-0"
                    >#{pr.prNumber}</span
                >
            </div>

            <!-- Meta info -->
            <div
                class="flex flex-wrap items-center gap-3 text-sm text-gray-600"
            >
                <!-- Author -->
                <div class="flex items-center gap-1">
                    {
                        pr.author.avatarUrl && (
                            <img
                                src={pr.author.avatarUrl}
                                alt={pr.author.githubUsername}
                                class="w-5 h-5 rounded-full"
                            />
                        )
                    }
                    <span>{pr.author.githubUsername}</span>
                </div>

                <!-- Repository -->
                <div class="flex items-center gap-1">
                    <svg
                        class="w-4 h-4"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 0h8v12H6V4z"
                            clip-rule="evenodd"></path>
                    </svg>
                    <span>{pr.repository.name}</span>
                </div>

                <!-- Time -->
                <div class="flex items-center gap-1">
                    <svg
                        class="w-4 h-4"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                            clip-rule="evenodd"></path>
                    </svg>
                    <span>{getTimeSince(pr.openedAt)}</span>
                </div>

                <!-- Diff size -->
                {
                    pr.diffSize && (
                        <div class="flex items-center gap-1">
                            <svg
                                class="w-4 h-4"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                                <path
                                    fill-rule="evenodd"
                                    d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                            <span>{pr.diffSize} lines</span>
                        </div>
                    )
                }

                <!-- Score -->
                <div class="flex items-center gap-1 text-blue-600 font-medium">
                    <svg
                        class="w-4 h-4"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                        ></path>
                    </svg>
                    <span>{pr.score} pts</span>
                </div>
            </div>
        </div>

        <!-- Status badge -->
        <div class="flex-shrink-0">
            <PRStatusBadge status={pr.status} />
        </div>
    </div>

    <!-- GitHub link -->
    <div class="mt-3 pt-3 border-t border-gray-100">
        <a
            href={pr.githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 text-sm text-gray-600 hover:text-gray-900"
        >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path
                    fill-rule="evenodd"
                    d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z"
                    clip-rule="evenodd"></path>
            </svg>
            View on GitHub
            <svg
                class="w-3 h-3"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
            </svg>
        </a>
    </div>
</div>
