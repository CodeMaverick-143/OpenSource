---
interface Props {
    variant?: "text" | "card" | "circle";
    width?: string;
    height?: string;
    class?: string;
}

const { variant = "text", width, height, class: className = "" } = Astro.props;

const variantClasses = {
    text: "h-4 rounded",
    card: "h-32 rounded-lg",
    circle: "rounded-full",
};

const style = {
    width:
        width ||
        (variant === "text" ? "100%" : variant === "circle" ? "48px" : "100%"),
    height: height || (variant === "circle" ? "48px" : undefined),
};
---

<div
    class={`skeleton ${variantClasses[variant]} ${className}`}
    style={`width: ${style.width}; ${style.height ? `height: ${style.height};` : ""}`}
>
</div>
