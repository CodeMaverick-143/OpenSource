                <div
                    class="text-[var(--color-text-dim)] flex flex-col items-center"
                >
                    <!-- Mock Badge Grid logic representation -->
                    <div class="grid grid-cols-4 gap-4 p-8 opacity-50">
                        <div
                            class="w-16 h-16 rounded border border-[var(--color-border)] bg-[var(--color-bg-surface)]"
                        >
                        </div>
                        <div
                            class="w-16 h-16 rounded border border-[var(--color-border)] bg-[var(--color-bg-surface)]"
                        >
                        </div>
                        <div
                            class="w-16 h-16 rounded border border-[var(--color-border)] bg-[var(--color-bg-surface)]"
                        >
                        </div>
                        <div
                            class="w-16 h-16 rounded border border-[var(--color-border)] bg-[var(--color-bg-surface)]"
                        >
                        </div>
                    </div>
                    <p class="mt-4 font-mono text-sm">Dashboard Preview</p>
                </div>
            </div>
        </div>
    </div>
</section>
