<section class="relative overflow-hidden py-16 sm:py-24">
    <div class="container-dashboard relative z-10 text-center">
        <!-- Tagline Pill -->
        <div class="mb-8 flex justify-center">
            <div
                class="rounded-full border border-[var(--color-border)] bg-[var(--color-bg-surface)] px-4 py-1.5 text-xs font-medium text-[var(--color-text-muted)] tracking-wide uppercase"
            >
                <span class="mr-2 text-[var(--color-accent-primary)]">⦿</span>
                Merit-Based Contribution Tracking
            </div>
        </div>

        <!-- Headline -->
        <h1
            class="mx-auto max-w-4xl text-5xl font-bold tracking-tight text-white sm:text-7xl mb-6"
        >
            Build a verified <br />
            <span class="text-[var(--color-text-muted)]"
                >credibility portfolio.</span
            >
        </h1>

        <!-- Subtext -->
        <h2
            class="mx-auto mt-6 max-w-2xl text-lg leading-relaxed text-[var(--color-text-dim)]"
        >
            ContriVerse tracks real impact, not just commit counts. Earn badges,
            climb merit-based leaderboards, and <strong
                class="text-[var(--color-text-muted)] font-medium"
                >prove your expertise</strong
            >.
        </h2>

        <!-- CTAs -->
        <div class="mt-10 flex items-center justify-center gap-x-6">
            <a href="/dashboard" class="btn-primary"> Explore Projects </a>
            <a href="#how-it-works" class="btn-secondary"> How It Works </a>
        </div>

        <!-- Trust Identifiers (Simplified) -->
        <div
            class="mt-20 flex justify-center items-center gap-8 md:gap-16 text-[var(--color-text-dim)] text-sm font-medium border-t border-[var(--color-border)] pt-8 max-w-3xl mx-auto"
        >
            <div class="flex items-center gap-3">
                <span class="text-[var(--color-accent-primary)]">•</span>
                <span>Verified Contributions</span>
            </div>
            <div class="flex items-center gap-3">
                <span class="text-[var(--color-accent-primary)]">•</span>
                <span>GitHub Integrated</span>
            </div>
            <div class="flex items-center gap-3">
                <span class="text-[var(--color-accent-primary)]">•</span>
                <span>No Fluff Metrics</span>
            </div>
        </div>
    </div>
</section>
