---
import type { BadgesResponse } from "../../lib/types";
import Card from "../ui/Card.astro";
import SimpleBadgeCard from "../badges/SimpleBadgeCard.astro";

interface Props {
    badges: BadgesResponse;
}

const { badges } = Astro.props;
---

<div class="space-y-6">
    <!-- Earned Badges -->
    <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            Earned Badges ({badges.earned.length})
        </h3>
        {
            badges.earned.length === 0 ? (
                <Card>
                    <div class="text-center py-6 text-gray-600">
                        <div class="text-4xl mb-2">ğŸ†</div>
                        <p>
                            No badges earned yet. Keep contributing to unlock
                            achievements!
                        </p>
                    </div>
                </Card>
            ) : (
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    {badges.earned.map((badge) => (
                        <SimpleBadgeCard badge={badge} earned={true} />
                    ))}
                </div>
            )
        }
    </div>

    <!-- Available Badges -->
    {
        badges.available.length > 0 && (
            <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    Available Badges ({badges.available.length})
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    {badges.available.map((badge) => (
                        <SimpleBadgeCard badge={badge} earned={false} />
                    ))}
                </div>
            </div>
        )
    }
</div>
