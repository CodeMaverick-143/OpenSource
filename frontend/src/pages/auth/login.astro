---
import AppLayout from "../../components/layout/AppLayout.astro";

const API_BASE_URL =
    import.meta.env.PUBLIC_API_BASE_URL || "http://localhost:8000/api/v1";

// Check if user is already logged in
const token = Astro.cookies.get("access_token")?.value;
if (token) {
    // User is already logged in, redirect to dashboard
    return Astro.redirect("/dashboard");
}

// Handle OAuth callback error if present
const error = Astro.url.searchParams.get("error");
const errorDescription = Astro.url.searchParams.get("error_description");
---

<AppLayout title="Sign In - ContriVerse">
    <div
        class="min-h-screen bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 flex items-center justify-center px-4 py-12"
    >
        <div class="max-w-md w-full">
            <!-- Logo and Header -->
            <div class="text-center mb-8">
                <h1 class="text-5xl font-bold text-gray-900 mb-2">
                    Contri<span class="text-blue-600">Verse</span>
                </h1>
                <p class="text-gray-600 text-lg">
                    Track your open source journey
                </p>
            </div>

            <!-- Login Card -->
            <div
                class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100"
            >
                {
                    error && (
                        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                            <p class="text-red-800 font-semibold mb-1">
                                Authentication Error
                            </p>
                            <p class="text-red-600 text-sm">
                                {errorDescription || error}
                            </p>
                        </div>
                    )
                }

                <div class="space-y-6">
                    <!-- Welcome Text -->
                    <div class="text-center">
                        <h2 class="text-2xl font-bold text-gray-900 mb-2">
                            Welcome Back
                        </h2>
                        <p class="text-gray-600">
                            Sign in with your GitHub account to continue
                        </p>
                    </div>

                    <!-- GitHub Sign In Button -->
                    <a
                        href={`${API_BASE_URL}/auth/github/login`}
                        class="flex items-center justify-center gap-3 w-full px-6 py-4 bg-gray-900 hover:bg-gray-800 text-white rounded-xl font-semibold transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            aria-hidden="true"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <span>Continue with GitHub</span>
                    </a>

                    <!-- Divider -->
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-200"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-4 bg-white text-gray-500"
                                >Why GitHub?</span
                            >
                        </div>
                    </div>

                    <!-- Benefits -->
                    <div class="space-y-3 text-sm text-gray-600">
                        <div class="flex items-start gap-3">
                            <svg
                                class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span
                                >Automatically track your pull requests and
                                contributions</span
                            >
                        </div>
                        <div class="flex items-start gap-3">
                            <svg
                                class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Earn points and climb the leaderboard</span>
                        </div>
                        <div class="flex items-start gap-3">
                            <svg
                                class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Showcase your open source achievements</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="mt-6 text-center text-sm text-gray-600">
                <p>
                    By signing in, you agree to our
                    <a
                        href="#"
                        class="text-blue-600 hover:text-blue-700 font-medium"
                        >Terms of Service</a
                    >
                    and
                    <a
                        href="#"
                        class="text-blue-600 hover:text-blue-700 font-medium"
                        >Privacy Policy</a
                    >
                </p>
            </div>

            <!-- Back to Home -->
            <div class="mt-4 text-center">
                <a
                    href="/"
                    class="text-sm text-gray-600 hover:text-gray-900 font-medium inline-flex items-center gap-1"
                >
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</AppLayout>
